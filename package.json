{
  "name": "output-vat",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/stanleyowen/output-vat",
  "author": "Stanley Owen <stanleyowen06@gmail.com>",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.2",
    "electron-updater": "^5.0.1",
    "exceljs": "^4.3.0",
    "firebase": "^9.8.3",
    "postcss": "^8.4.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.1.3",
    "typescript": "^4.7.4",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:electron": "yarn build && electron-builder build --win --publish never",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "deploy": "yarn build && electron-builder build --win --publish always"
  },
  "license": "Apache-2.0",
  "build": {
    "appId": "com.stanleyowen.output-vat",
    "productName": "Output VAT",
    "copyright": "Copyright Â© 2022 Stanley Owen",
    "publish": [
      {
        "provider": "github",
        "owner": "stanleyowen",
        "repo": "output-vat"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "./LICENSE.txt",
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.5",
    "electron-builder": "^23.0.3",
    "wait-on": "^6.0.1"
  }
}