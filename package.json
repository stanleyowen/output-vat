{
  "name": "output-vat",
  "version": "1.2.1",
  "private": true,
  "repository": "https://github.com/stanleyowen/output-vat",
  "author": "Stanley Owen <stanleyowen06@gmail.com>",
  "dependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.5",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "exceljs": "^4.4.0",
    "node-xlsx": "^0.24.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "web-vitals": "^3.5.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:electron:win": "yarn build && electron-builder build --win --publish never",
    "build:electron:mac": "yarn build && electron-builder build --mac --publish never",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "deploy": "yarn build && electron-builder build --win --publish always"
  },
  "license": "Apache-2.0",
  "build": {
    "appId": "com.stanleyowen.output-vat",
    "productName": "Output VAT",
    "copyright": "Copyright Â© 2022 Stanley Owen",
    "publish": [
      {
        "provider": "github",
        "owner": "stanleyowen",
        "repo": "output-vat"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "./LICENSE.txt",
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "extraFiles": [
    {
      "from": "public/process_excel.ps1",
      "to": "public/process_excel.ps1",
      "filter": [
        "**/*"
      ]
    }
  ]
}